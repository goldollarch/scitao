<MAN>
  <LANGUAGE>eng</LANGUAGE>
  <TITLE> exponent_inner  </TITLE>
  <TYPE>Scilab Function  </TYPE>
  <DATE> May, 2006</DATE>
  <SHORT_DESCRIPTION name="exponent_inner"> construct an exponential inner scale.  </SHORT_DESCRIPTION>
  <CALLING_SEQUENCE>
  <CALLING_SEQUENCE_ITEM>[in]=exponent_inner(inner_scale)  </CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>
  <PARAM>
 <PARAM_INDENT>
  <PARAM_ITEM>
  <PARAM_NAME>inner_scale  </PARAM_NAME>
  <PARAM_DESCRIPTION>
          <SP>: the inner scale in metre. </SP>
  </PARAM_DESCRIPTION> 
  </PARAM_ITEM>
  <PARAM_ITEM>
  <PARAM_NAME>in  </PARAM_NAME>
  <PARAM_DESCRIPTION>
          <SP>: the output inner scale;</SP>
  </PARAM_DESCRIPTION> 
  </PARAM_ITEM>
 </PARAM_INDENT>
  </PARAM>
  <DESCRIPTION>
  <P>
    construct an exponential inner scale.  
  </P>
  </DESCRIPTION>
  <EXAMPLE><![CDATA[
	pl=power_law(0.1,1e-6);
	in=exponent_inner(0.001);
	ps=power_spectrum(pl,in);
 ]]></EXAMPLE>
