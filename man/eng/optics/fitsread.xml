<MAN>
	<LANGUAGE>eng</LANGUAGE>
	<TITLE> fitsread  </TITLE>
	<TYPE>Scilab Function  </TYPE>
	<DATE> May, 2006 </DATE>
	<SHORT_DESCRIPTION name="fitsread"> Extract data from a FITS file . </SHORT_DESCRIPTION>
	<CALLING_SEQUENCE>
		<CALLING_SEQUENCE_ITEM>data = fitsread(filename[, extname[, index]])  </CALLING_SEQUENCE_ITEM>
	</CALLING_SEQUENCE>
	<PARAM>
		<PARAM_INDENT>
			<PARAM_ITEM>
				<PARAM_NAME>filename  </PARAM_NAME>
				<PARAM_DESCRIPTION>
					<SP>: a string that specifies the name of the FITS file. </SP>
				</PARAM_DESCRIPTION>
			</PARAM_ITEM>
			<PARAM_ITEM>
				<PARAM_NAME>extname  </PARAM_NAME>
				<PARAM_DESCRIPTION>
					<SP>: specify only one extension, extname may be 'primary', 'table', 'bintable', 'image', 'unknown'. default extname  equal to string 'primary'.</SP>
				</PARAM_DESCRIPTION>
			</PARAM_ITEM>
			<PARAM_ITEM>
				<PARAM_NAME>index  </PARAM_NAME>
				<PARAM_DESCRIPTION>
					<SP>: specify the index of the specified extension type extname in the file, default index equal to 1. </SP>
				</PARAM_DESCRIPTION>
			</PARAM_ITEM>			
			<PARAM_ITEM>
				<PARAM_NAME>data  </PARAM_NAME>
				<PARAM_DESCRIPTION>
					<SP>: a matrix, return the data value. </SP>
				</PARAM_DESCRIPTION>
			</PARAM_ITEM>
		</PARAM_INDENT>
	</PARAM>
	<DESCRIPTION>
		<P>
			Data Arrays or Extensions 
		</P>
	<TABLE>
		<TABLE_NEW_ROW>
			<TABLE_NEW_COLUMN>extname</TABLE_NEW_COLUMN>
			<TABLE_NEW_COLUMN>Description</TABLE_NEW_COLUMN>
		</TABLE_NEW_ROW>
		<TABLE_NEW_ROW>
			<TABLE_NEW_COLUMN>'primary'</TABLE_NEW_COLUMN>
			<TABLE_NEW_COLUMN>Read data from the primary data array</TABLE_NEW_COLUMN>
		</TABLE_NEW_ROW>
		<TABLE_NEW_ROW>
			<TABLE_NEW_COLUMN>'table'</TABLE_NEW_COLUMN>
			<TABLE_NEW_COLUMN>Read data from the ASCII Table extension.The codes are not tested.</TABLE_NEW_COLUMN>
		</TABLE_NEW_ROW>
		<TABLE_NEW_ROW>
			<TABLE_NEW_COLUMN>'bintable'</TABLE_NEW_COLUMN>
			<TABLE_NEW_COLUMN>Read data from the Binary Table extension.The codes are not tested.</TABLE_NEW_COLUMN>
		</TABLE_NEW_ROW>
		<TABLE_NEW_ROW>
			<TABLE_NEW_COLUMN>'image'</TABLE_NEW_COLUMN>
			<TABLE_NEW_COLUMN>Read data from the Image extension.</TABLE_NEW_COLUMN>
		</TABLE_NEW_ROW>
		<TABLE_NEW_ROW>
			<TABLE_NEW_COLUMN>'unknown'</TABLE_NEW_COLUMN>
			<TABLE_NEW_COLUMN>Read data from the Unknown extension.</TABLE_NEW_COLUMN>
		</TABLE_NEW_ROW>		
	</TABLE> 		
	</DESCRIPTION>
	<EXAMPLE><![CDATA[
	// Read FITS file test.fits into a  data.
	data = fitsread('test.fits');
	data(1:5,1:5)
		ans  =

			1.356D-19    1.356D-19    1.356D-19    1.356D-19    1.356D-19
			1.356D-19    1.356D-19    1.356D-19    1.356D-19    1.356D-19
			1.356D-19    1.356D-19    1.356D-19    1.356D-19    1.356D-19
			74.679741    81.476204    87.963593    94.11731     99.914009
			74.679741    81.476204    87.963593    94.11731     99.914009
    
    
]]></EXAMPLE>
