<MAN>
  <LANGUAGE>eng</LANGUAGE>
  <TITLE> multi_pixarr  </TITLE>
  <TYPE>Scilab Function  </TYPE>
  <DATE> May, 2006 </DATE>
  <SHORT_DESCRIPTION name="multi_pixarr"> multiply the elements of a  pixel array.  </SHORT_DESCRIPTION>
  <CALLING_SEQUENCE>
  <CALLING_SEQUENCE_ITEM>[pix_arr_out]=multi_pixarr(pix_arr_in, coef)  </CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>
  <PARAM>
 <PARAM_INDENT>
  <PARAM_ITEM>
  <PARAM_NAME>pix_arr_in  </PARAM_NAME>
  <PARAM_DESCRIPTION>
          <SP>: the input pixel array. </SP>
  </PARAM_DESCRIPTION> 
  </PARAM_ITEM>
  <PARAM_ITEM>
  <PARAM_NAME>coef  </PARAM_NAME>
  <PARAM_DESCRIPTION>
          <SP>: the coefficient to multiply </SP>
  </PARAM_DESCRIPTION> 
  </PARAM_ITEM>
  <PARAM_ITEM>
  <PARAM_NAME>pix_arr_out  </PARAM_NAME>
  <PARAM_DESCRIPTION>
          <SP>: the output pixel array. </SP>
  </PARAM_DESCRIPTION> 
  </PARAM_ITEM>
 </PARAM_INDENT>
  </PARAM>
  <DESCRIPTION>
  <P>
     multiply the elements of a  pixel array. 
  </P>
  </DESCRIPTION>
  <EXAMPLE><![CDATA[
	dim=100;arr=[];
	for i=1:dim
		for j=1:dim
			sgn=i*j;
			arr=[arr,sgn];
		end
	end  
	pix_arr=pixel_array(dim);
	pix_arr_1=set_pix_arr_data(pix_arr,arr);
	a=pixarr_data(pix_arr_1);surf(a);
	pix_arr_2=multi_pixarr(pix_arr_1,-1);
	a=pixarr_data(pix_arr_2);surf(a);
 ]]></EXAMPLE>
