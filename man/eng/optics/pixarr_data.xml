<MAN>
  <LANGUAGE>eng</LANGUAGE>
  <TITLE> pixarr_data  </TITLE>
  <TYPE>Scilab Function  </TYPE>
  <DATE> May, 2006 </DATE>
  <SHORT_DESCRIPTION name="pixarr_data"> convert the pixel array data to Scilab format.  </SHORT_DESCRIPTION>
  <CALLING_SEQUENCE>
  <CALLING_SEQUENCE_ITEM>[arr_out]=pixarr_data(pixarr_in)  </CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>
  <PARAM>
 <PARAM_INDENT>
  <PARAM_ITEM>
  <PARAM_NAME>pixarr_in  </PARAM_NAME>
  <PARAM_DESCRIPTION>
          <SP>: the input  pixel array. </SP>
  </PARAM_DESCRIPTION> 
  </PARAM_ITEM>
  <PARAM_ITEM>
  <PARAM_NAME>arr_out </PARAM_NAME>
  <PARAM_DESCRIPTION>
          <SP>: the output array. it is a 2D matrix </SP>
  </PARAM_DESCRIPTION> 
  </PARAM_ITEM>
 </PARAM_INDENT>
  </PARAM>
  <DESCRIPTION>
  <P>
    convert the pixel array data to Scilab format.  
  </P>
  </DESCRIPTION>
  <EXAMPLE><![CDATA[
	dim=128;arr=[];
	for i=1:dim
		for j=1:dim
			sgn=i+j;
			arr=[arr,sgn];
		end
	end  
	pix_arr=pixel_array(dim);
	pix_arr=set_pix_arr_data(pix_arr,arr);
	a=pixarr_data(pix_arr);surf(a);
 ]]></EXAMPLE>
