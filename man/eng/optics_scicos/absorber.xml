	<ModuleName>absorber</ModuleName>
	
	<ModuleIcon>absorber.gif</ModuleIcon>
	
	<Library>Optics</Library>
	
	<Description>This block filters the field through intensity attenuator.</Description>
	
	<DialogBoxes>
		<Items>
			<Item>
				<ItemTitle>Set the intensity attenuator parameter</ItemTitle>
				<ItemContent>(default value)</ItemContent>
			</Item>
			<Item>
				<ItemTitle>the coefficient of attenuation or amplification</ItemTitle>
				<ItemContent>1</ItemContent>
			</Item>
		</Items>
		<ItemExplain>
			<Explain>
				<Subject>the coefficient of attenuation or amplification : </Subject>
				<Content>input the coefficient.</Content>
			</Explain>
		</ItemExplain>
	</DialogBoxes>
	
	<DefaultProperties>
		<Property>
			<Subject>always active:</Subject>
			<Content>no</Content>
		</Property>
		<Property>
			<Subject>continuous-time state:</Subject>
			<Content>no</Content>
		</Property>	
		<Property>
			<Subject>discrete-time state:</Subject>
			<Content>yes </Content>
		</Property>		
	</DefaultProperties>
	
	<ExampleDiagrams> 
		<ExampleIcon>absorb_em.gif</ExampleIcon>
	</ExampleDiagrams>
	
	<InterfacingFunction>scitao/macros/ABSORBER.sci</InterfacingFunction>
	
