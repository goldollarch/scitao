	<ModuleName>controller</ModuleName>
	
	<ModuleIcon>pic.gif</ModuleIcon>
	
	<Library>Optics</Library>
	
	<Description>This block set the proportional integral controller parameter.</Description>
	
	<DialogBoxes>
		<Items>
			<Item>
				<ItemTitle>set the proportional integral controller parameter</ItemTitle>
				<ItemContent>(default value)</ItemContent>
			</Item>
			<Item>
				<ItemTitle>type (ttm/dm)</ItemTitle>
				<ItemContent>0</ItemContent>
			</Item>
			<Item>
				<ItemTitle>proportional gain</ItemTitle>
				<ItemContent>1e-2</ItemContent>
			</Item>		
			<Item>
				<ItemTitle>integral gain</ItemTitle>
				<ItemContent>1e-1</ItemContent>
			</Item>				
		</Items>
		<ItemExplain>
			<Explain>
				<Subject>type (ttm/dm):</Subject>
				<Content>input the PIC type. 0(default): represent a TTM PIC. 1: represent a DM PIC.</Content>
			</Explain>		
			<Explain>
				<Subject>proportional gain: </Subject>
				<Content>1e-2(default)</Content>
			</Explain>
			<Explain>
				<Subject>integral gain: </Subject>
				<Content>1e-1(default)</Content>
			</Explain>			
		</ItemExplain>
	</DialogBoxes>
	
	<DefaultProperties>
		<Property>
			<Subject>always_active:</Subject>
			<Content>no</Content>
		</Property>
		<Property>
			<Subject>continuous-time state:</Subject>
			<Content>no</Content>
		</Property>	
		<Property>
			<Subject>discrete-time state:</Subject>
			<Content>yes </Content>
		</Property>			
	</DefaultProperties>
	
	<ExampleDiagrams> 
		<ExampleIcon>scao_em.gif</ExampleIcon>
	</ExampleDiagrams>
	
