		<link8>See Also</link8>
	</links>
	
	<ModuleName>gauss</ModuleName>
	
	<ModuleIcon>gauss.gif</ModuleIcon>
	
	<Library>Optics</Library>
	
	<Description>This block sets the beam through a gaussian filter parameters.</Description>
	
	<DialogBoxes>
		<Items>
			<Item>
				<ItemTitle>Set the gauss filter parameter</ItemTitle>
				<ItemContent>(default value)</ItemContent>
			</Item>
			<Item>
				<ItemTitle>1/e intensity radius</ItemTitle>
				<ItemContent>0.005</ItemContent>
			</Item>
			<Item>
				<ItemTitle>Intensity transmission</ItemTitle>
				<ItemContent>1</ItemContent>
			</Item>			
		</Items>
		<ItemExplain>
			<Explain>
				<Subject>1/e intensity radius :</Subject>
				<Content>set the intensity radius.</Content>
			</Explain>
			<Explain>
				<Subject>Intensity transmission :</Subject>
				<Content>set the intensity transmission.</Content>
			</Explain>			
		</ItemExplain>
	</DialogBoxes>
	
	<DefaultProperties>
		<Property>
			<Subject>always_active: </Subject>
			<Content>no</Content>
		</Property>
		<Property>
			<Subject>continuous-time state:</Subject>
			<Content>no</Content>
		</Property>	
		<Property>
			<Subject>discrete-time state:</Subject>
			<Content>yes </Content>
		</Property>			
	</DefaultProperties>
	
	<ExampleDiagrams> 
		<ExampleIcon>gauss_em.gif</ExampleIcon>
	</ExampleDiagrams>
	
	<InterfacingFunction> macros/GAUSS.sci </InterfacingFunction>
	
	<ComputationalFunction> src/scicos/gauss.c </ComputationalFunction>
	
	<SeeAlso>
       <SEE_ALSO_ITEM><LINK PATH="../optics/">gauss</LINK></SEE_ALSO_ITEM>
	</SeeAlso>
	
