	<ModuleName>reconstructor</ModuleName>
	
	<ModuleIcon>recon.gif</ModuleIcon>
	
	<Library>Optics</Library>
	
	<Description>This block set the least squares reconstructors parameter.</Description>
	
	<DialogBoxes>
		<Items>
			<Item>
				<ItemTitle>Set least squares reconstructors  parameter</ItemTitle>
				<ItemContent>(default value)</ItemContent>
			</Item>
			<Item>
				<ItemTitle>the number of subapertures</ItemTitle>
				<ItemContent>16</ItemContent>
			</Item>
			<Item>
				<ItemTitle>eigenvalue threshold</ItemTitle>
				<ItemContent>1e-6</ItemContent>
			</Item>			
			<Item>
				<ItemTitle>subaperture illumination threshold</ItemTitle>
				<ItemContent>0.5</ItemContent>
			</Item>			
			<Item>
				<ItemTitle>reconstructor file name</ItemTitle>
				<ItemContent>void</ItemContent>
			</Item>			
		</Items>
		<ItemExplain>
			<Explain>
				<Subject>the number of subapertures : </Subject>
				<Content></Content>
			</Explain>
			<Explain>
				<Subject>eigenvalue threshold : </Subject>
				<Content></Content>
			</Explain>			
			<Explain>
				<Subject>subaperture illumination threshold : </Subject>
				<Content></Content>
			</Explain>			
			<Explain>
				<Subject>reconstructor file name : </Subject>
				<Content></Content>
			</Explain>			
		</ItemExplain>
	</DialogBoxes>
	
	<DefaultProperties>
		<Property>
			<Subject>always active:</Subject>
			<Content>no</Content>
		</Property>
		<Property>
			<Subject>continuous-time state:</Subject>
			<Content>no</Content>
		</Property>	
		<Property>
			<Subject>discrete-time state:</Subject>
			<Content>yes </Content>
		</Property>			
	</DefaultProperties>
	
