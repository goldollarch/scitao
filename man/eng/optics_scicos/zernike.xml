	<ModuleName>zernike</ModuleName>
	
	<ModuleIcon>znike.gif</ModuleIcon>
	
	<Library>Optics</Library>
	
	<Description>This block introduces arbitrary Zernike aberration into the field distribution.</Description>
	
	<DialogBoxes>
		<Items>
			<Item>
				<ItemTitle>Set the Zernike polynomials parameter</ItemTitle>
				<ItemContent>(default value)</ItemContent>
			</Item>
			<Item>
				<ItemTitle>the radial order n</ItemTitle>
				<ItemContent>2</ItemContent>
			</Item>
			<Item>
				<ItemTitle>the azimuthal order m</ItemTitle>
				<ItemContent>2</ItemContent>
			</Item>			
			<Item>
				<ItemTitle>the radius R</ItemTitle>
				<ItemContent>0.005</ItemContent>
			</Item>			
			<Item>
				<ItemTitle>the amplitude of aberration in R</ItemTitle>
				<ItemContent>10</ItemContent>
			</Item>			
		</Items>
		<ItemExplain>
			<Explain>
				<Subject>the radial order n : </Subject>
				<Content></Content>
			</Explain>
			<Explain>
				<Subject>the azimuthal order m : </Subject>
				<Content></Content>
			</Explain>			
			<Explain>
				<Subject>the radius R : </Subject>
				<Content></Content>
			</Explain>			
			<Explain>
				<Subject>the amplitude of aberration in R : </Subject>
				<Content></Content>
			</Explain>			
		</ItemExplain>
	</DialogBoxes>
	
	<DefaultProperties>
		<Property>
			<Subject>always active:</Subject>
			<Content>no</Content>
		</Property>
		<Property>
			<Subject>continuous-time state:</Subject>
			<Content>no</Content>
		</Property>	
		<Property>
			<Subject>discrete-time state:</Subject>
			<Content>yes </Content>
		</Property>			
	</DefaultProperties>
	
	<ExampleDiagrams> 
		<ExampleIcon>znk_em.gif</ExampleIcon>
	</ExampleDiagrams>
	
	<InterfacingFunction>macros/ZERNIKE.sci</InterfacingFunction>
	
	<ComputationalFunction>src/scicos/zernike.c</ComputationalFunction>
	
