	<ModuleName>lens</ModuleName>
	
	<ModuleIcon>len.gif</ModuleIcon>
	
	<Library>Optics</Library>
	
	<Description>This block set the lens parameter.</Description>
	
	<DialogBoxes>
		<Items>
			<Item>
				<ItemTitle>Set the lens parameter</ItemTitle>
				<ItemContent>(default value)</ItemContent>
			</Item>
			<Item>
				<ItemTitle>the focal distance</ItemTitle>
				<ItemContent>10</ItemContent>
			</Item>
		</Items>
		<ItemExplain>
			<Explain>
				<Subject>the focal distance : </Subject>
				<Content>set the distance in meters.</Content>
			</Explain>
		</ItemExplain>
	</DialogBoxes>
	
	<DefaultProperties>
		<Property>
			<Subject>always active:</Subject>
			<Content>no</Content>
		</Property>
		<Property>
			<Subject>discrete-time state:</Subject>
			<Content>yes </Content>
		</Property>			
	</DefaultProperties>
	
	<ExampleDiagrams> 
		<ExampleIcon>len_em.gif</ExampleIcon>
	</ExampleDiagrams>
	
	<InterfacingFunction>macros/LENS.sci</InterfacingFunction>
	
	<ComputationalFunction>src/scicos/Lens.c</ComputationalFunction>
	
