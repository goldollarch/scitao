	<ModuleName>geometry</ModuleName>
	
	<ModuleIcon>geom.gif</ModuleIcon>
	
	<Library>Optics</Library>
	
	<Description>This block set Set geometrical transformation parameter.</Description>
	
	<DialogBoxes>
		<Items>
			<Item>
				<ItemTitle>Set geometrical transformation parameter</ItemTitle>
				<ItemContent>(default value)</ItemContent>
			</Item>
			<Item>
				<ItemTitle>translation vector</ItemTitle>
				<ItemContent>[0;0]</ItemContent>
			</Item>
			<Item>
				<ItemTitle>rotation angle</ItemTitle>
				<ItemContent>0</ItemContent>
			</Item>			
			<Item>
				<ItemTitle>reflect plane normal</ItemTitle>
				<ItemContent>[0;0;0]</ItemContent>
			</Item>			
		</Items>
		<ItemExplain>
			<Explain>
				<Subject>translation vector : </Subject>
				<Content>set the translation vector.</Content>
			</Explain>
			<Explain>
				<Subject>rotation angle : </Subject>
				<Content>set the angle.</Content>
			</Explain>			
			<Explain>
				<Subject>reflect plane normal : </Subject>
				<Content>set the normal vector.</Content>
			</Explain>			
		</ItemExplain>
	</DialogBoxes>
	
	<DefaultProperties>
		<Property>
			<Subject>always active:</Subject>
			<Content>no</Content>
		</Property>
	</DefaultProperties>
	
	<ExampleDiagrams> 
		<ExampleIcon>geo_em.gif</ExampleIcon>
	</ExampleDiagrams>
	
	<InterfacingFunction>macros/GEOMETRY.sci</InterfacingFunction>
	
	<ComputationalFunction>src/scicos/geometry.c</ComputationalFunction>
	
