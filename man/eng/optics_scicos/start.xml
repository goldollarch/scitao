	<ModuleName>start</ModuleName>
	
	<ModuleIcon>start.gif</ModuleIcon>
	
	<Library>Optics</Library>
	
	<Description>This block initialize some wave parameters.</Description>
	
	<DialogBoxes>
		<Items>
			<Item>
				<ItemTitle>Set begin parameter</ItemTitle>
				<ItemContent>(default value)</ItemContent>
			</Item>
			<Item>
				<ItemTitle>the grid dimension</ItemTitle>
				<ItemContent>[256;256]</ItemContent>
			</Item>
			<Item>
				<ItemTitle>the grid size (in meters)</ItemTitle>
				<ItemContent>0.01</ItemContent>
			</Item>			
			<Item>
				<ItemTitle>wavelength (in meters)</ItemTitle>
				<ItemContent>1e-6</ItemContent>
			</Item>			
		</Items>
		<ItemExplain>
			<Explain>
				<Subject>the grid dimension : </Subject>
				<Content>a 2 vector specifying the grid dimension.</Content>
			</Explain>
			<Explain>
				<Subject>the grid size  : </Subject>
				<Content>specifying the square grid size in meters.</Content>
			</Explain>			
			<Explain>
				<Subject>wavelength  : </Subject>
				<Content>input the wavelength in meters.</Content>
			</Explain>			
		</ItemExplain>
	</DialogBoxes>
	
	<DefaultProperties>
		<Property>
			<Subject>always active:</Subject>
			<Content>no</Content>
		</Property>
	</DefaultProperties>
	
	<ExampleDiagrams> 
		<ExampleIcon>ap_em.gif</ExampleIcon>
	</ExampleDiagrams>
	
	<InterfacingFunction>macros/START.sci</InterfacingFunction>
	
	<ComputationalFunction>src/scicos/start.c</ComputationalFunction>
	
